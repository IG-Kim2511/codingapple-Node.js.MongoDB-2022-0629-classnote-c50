        <div class="form-group">
          <label>오늘의 할일</label>

            <!-- 🥒c52 value="<%= ig_posts.제목 %>" -->
          <input type="text" class="form-control" name="ig_title" value="<%= ig_posts.제목 %>" />
        </div>
        <div class="form-group">
          <label>날짜</label>
      
            <!-- 🥒c52 value="<%= ig_posts.날짜 %>" -->
          <input type="text" class="form-control" name="ig_data" value="<%= ig_posts.날짜 %>"/>
        </div>

        <button type="submit" class="btn btn-outline-secondary">Submit</button>
      </form>      
    </div>

